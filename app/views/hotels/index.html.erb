


<%= form_with model: @prototype, local: true do |f|%>
  <div class="field">
    <%= f.label :title, "地域" %><br />
    <%= f.text_field :title, id:"prototype_title" %>
  </div>

  <div class="field">
    <%= f.label :catch_copy, "日付" %><br />
    <%= f.text_area :catch_copy, class: :form__text, id:"prototype_catch_copy" %>
  </div>

  <div class="field">
    <%= f.label :concept, "絞り込み" %><br />
    <%= f.text_area :concept, class: :form__text, id:"prototype_concept" %>
  </div>

  <div class="field">
    <%= f.label :image, "ホテル名" %><br />
    <%= f.text_area :image, id:"prototype_image" %>
  </div>

<div class="field">
    <%= f.label :image, "人数" %><br />
    <%= f.text_area :image, id:"prototype_image" %>
  </div>

  <div class="actions">
    <%= f.submit "検索する", class: :form__btn  %>
  </div>
<% end %>