<!DOCTYPE html>
<html>
  <head>
    <title>Hotels</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>



  <body>
    <header class="header">
      <div class="inner">
        <div class="nav">
          <div class="nav__left">
          <%= link_to "HOTELS", root_path, class: :logo %>
          
          </div>
          <%# ログイン時 %>
          <% if user_signed_in? %>
            <div class="nav__right">
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: :nav__logout %>
              <%= link_to "Booking confirmation", root_path, class: :nav__btn %>
            </div>
          <%# ログイン時 %>
          <%# ログアウト・未登録時 %>
          <% else %>
            <div class="nav__right">
              <%= link_to "Log in", new_user_session_path, class: :nav__btn %>
              <%= link_to "Sign up", new_user_registration_path, class: :nav__btn %>
            </div>
         <% end %>
           <%# ログアウト・未登録時 %>
        </div>
      </div>
    </header>
    <%= yield %>
    <footer class="footer">
      <p class="copyright">Copyright © HOTELS All rights reserved.</p>
    </footer>
  </body>
</html>